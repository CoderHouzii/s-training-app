<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <songming.straing.widget.TitleBar
        android:id="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="主页"
        app:right_btn_text="添加好友"/>

    <songming.straing.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_no_photo"/>
    <TextView
        android:id="@+id/person_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="ID:10486 | momo"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:weightSum="9">
        <TextView
            android:id="@+id/practise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="3"
            android:background="@drawable/bg_black_frame"
            android:gravity="center"
            android:text="锻炼"
            android:drawableTop="@drawable/ic_practise"
            />
        <TextView
            android:id="@+id/circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="3"
            android:background="@drawable/bg_black_frame"
            android:gravity="center"
            android:text="圈子"
            android:drawableTop="@drawable/ic_circle"
            />
        <TextView
            android:id="@+id/article"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="3"
            android:background="@drawable/bg_black_frame"
            android:gravity="center"
            android:text="圈子"
            android:drawableTop="@drawable/ic_article"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_black_frame">
        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="等级:"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            android:layout_marginLeft="64dp"/>
        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="城市:"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            android:layout_marginLeft="64dp"/>
        <TextView
            android:id="@+id/work"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="职业:"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            android:layout_marginLeft="64dp"/>

        <TextView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="签名:"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            android:layout_marginLeft="64dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</LinearLayout>