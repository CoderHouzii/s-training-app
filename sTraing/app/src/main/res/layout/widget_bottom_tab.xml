<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:layout_height="55dp"
    android:weightSum="15">
    <TextView
        android:id="@+id/btn_index"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="首页"
        android:drawableTop="@drawable/ic_index"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="好友"
        android:drawableTop="@drawable/ic_people"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_mission"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:drawableTop="@drawable/ic_play"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="消息"
        android:drawableTop="@drawable/ic_message"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="个人"
        android:drawableTop="@drawable/ic_me"
        android:gravity="center"
        />

</LinearLayout>